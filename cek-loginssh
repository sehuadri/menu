#!/bin/bash
clear
# Color
RED='\033[0;31m'
NC='\033[0m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
LIGHT='\033[0;37m'

if [ -e "/var/log/auth.log" ]; then
    LOG="/var/log/auth.log"
elif [ -e "/var/log/secure" ]; then
    LOG="/var/log/secure"
else
    echo "Log file tidak ditemukan."
    exit 1
fi

# DROPBEAR
data=( $(ps aux | grep -i dropbear | awk '{print $2}') )
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "       ID     |  Username    |  IP Address"
echo -e "\033[1;36m---------------------------------------------\033[0m"
grep -i dropbear "$LOG" | grep -i "Password auth succeeded" > /tmp/login-db.txt
for PID in "${data[@]}"; do
    grep "dropbear\[$PID\]" /tmp/login-db.txt > /tmp/login-db-pid.txt
    NUM=$(wc -l < /tmp/login-db-pid.txt)
    if [ "$NUM" -eq 1 ]; then
        USER=$(awk '{gsub("'\'","",$0); print $8}' /tmp/login-db-pid.txt)     # hapus tanda petik
        IP=$(awk '{print $10}' /tmp/login-db-pid.txt | cut -d: -f1)          # ambil IP tanpa port
        echo "$PID - $USER - $IP"
    fi
done
echo -e "\033[1;36m---------------------------------------------\033[0m"

# SSH
echo " "
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "       ID     |  Username    |  IP Address"
echo -e "\033[1;36m---------------------------------------------\033[0m"
grep -i sshd "$LOG" | grep -i "Accepted password for" > /tmp/login-db.txt
data=( $(ps aux | grep "\[priv\]" | sort -k 72 | awk '{print $2}') )
for PID in "${data[@]}"; do
    grep "sshd\[$PID\]" /tmp/login-db.txt > /tmp/login-db-pid.txt
    NUM=$(wc -l < /tmp/login-db-pid.txt)
    if [ "$NUM" -eq 1 ]; then
        USER=$(awk '{print $9}' /tmp/login-db-pid.txt)
        IP=$(awk '{print $11}' /tmp/login-db-pid.txt)
        echo "$PID - $USER - $IP"
    fi
done
echo -e "\033[1;36m---------------------------------------------\033[0m"

# OPENVPN TCP
if [ -f "/etc/openvpn/server/openvpn-tcp.log" ]; then
    echo ""
    echo -e "\033[1;36m---------------------------------------------\033[0m"
    echo "    Username  |  IP Address  |  Connected"
    echo -e "\033[1;36m---------------------------------------------\033[0m"
    grep -w "^CLIENT_LIST" /etc/openvpn/server/openvpn-tcp.log | cut -d ',' -f 2,3,8 | sed -e 's/,/      /g'
fi
echo -e "\033[1;36m---------------------------------------------\033[0m"

# OPENVPN UDP
if [ -f "/etc/openvpn/server/openvpn-udp.log" ]; then
    echo " "
    echo -e "\033[1;36m---------------------------------------------\033[0m"
    echo "    Username  |  IP Address  |  Connected"
    echo -e "\033[1;36m---------------------------------------------\033[0m"
    grep -w "^CLIENT_LIST" /etc/openvpn/server/openvpn-udp.log | cut -d ',' -f 2,3,8 | sed -e 's/,/      /g'
fi
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo ""
read -n 1 -s -r -p "Press any key to back on menu"
m-ssh
