#!/bin/bash
clear
# Color
RED='\033[0;31m'
NC='\033[0m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
LIGHT='\033[0;37m'

clear
echo " "
echo " "

# Tentukan file log secara otomatis
if [ -e "/var/log/auth.log" ]; then
        LOG="/var/log/auth.log";
fi
if [ -e "/var/log/secure" ]; then
        LOG="/var/log/secure";
fi

# =============================================
# Cek Login Dropbear (Bagian ini sudah benar)
# =============================================
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "        Dropbear Login"
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "       ID     |  Username    |  IP Address";
echo -e "\033[1;36m---------------------------------------------\033[0m"
data=( `ps aux | grep -i dropbear | awk '{print $2}'`);
cat $LOG | grep -i dropbear | grep -i "Password auth succeeded" > /tmp/login-db.txt;
for PID in "${data[@]}"
do
    cat /tmp/login-db.txt | grep "dropbear\[$PID\]" > /tmp/login-db-pid.txt;
    NUM=`cat /tmp/login-db-pid.txt | wc -l`;
    USER=`cat /tmp/login-db-pid.txt | awk '{print $10}'`;
    IP=`cat /tmp/login-db-pid.txt | awk '{print $12}'`;
    if [ $NUM -eq 1 ]; then
            echo "$PID - $USER - $IP";
    fi
done
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo " "

# =================================================================
# Cek Login OpenSSH (BAGIAN INI DIPERBAIKI)
# Menggunakan perintah 'w' yang lebih andal dan sederhana
# =================================================================
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "         OpenSSH Login"
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "    TTY     |  Username    |  IP Address";
echo -e "\033[1;36m---------------------------------------------\033[0m"
w -h | awk '{print $2 "    |  " $1 "        |  " $3}'
echo -e "\033[1;36m---------------------------------------------\033[0m"


# =============================================
# Cek Login OpenVPN (Bagian ini sudah benar)
# =============================================
if [ -f "/etc/openvpn/server/openvpn-tcp.log" ]; then
echo ""
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "         OpenVPN TCP Login"
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "    Username  |  IP Address  |  Connected";
echo -e "\033[1;36m---------------------------------------------\033[0m"
    cat /etc/openvpn/server/openvpn-tcp.log | grep -w "^CLIENT_LIST" | cut -d ',' -f 2,3,8 | sed -e 's/,/      /g'
fi
echo -e "\033[1;36m---------------------------------------------\033[0m"

if [ -f "/etc/openvpn/server/openvpn-udp.log" ]; then
echo " "
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "         OpenVPN UDP Login"
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "    Username  |  IP Address  |  Connected";
echo -e "\033[1;36m---------------------------------------------\033[0m"
    cat /etc/openvpn/server/openvpn-udp.log | grep -w "^CLIENT_LIST" | cut -d ',' -f 2,3,8 | sed -e 's/,/      /g'
fi
echo -e "\033[1;36m---------------------------------------------\033[0m"
echo "";
echo ""
read -n 1 -s -r -p "Press any key to back on menu"
# m-ssh # Sesuaikan dengan nama menu Anda
